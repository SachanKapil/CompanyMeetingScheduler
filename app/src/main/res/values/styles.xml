<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoadingProgressBarStyle">
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="OrangeRectangularButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_side_rounded_white_rectangle_8dp</item>
        <item name="backgroundTint">@color/green</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:foreground">@drawable/ripple_light_grey_rounded_8sdp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_three</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:paddingStart">@dimen/_14sdp</item>
        <item name="android:paddingEnd">@dimen/_14sdp</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:background">@drawable/bg_grey_stroke_side_rounded_white_rectangle</item>
    </style>

</resources>